function init()

	mgMaterial("glass")
	mgColor(1, 1, 1)

	a = mgCreateBody()

	mgCreateBox(a, 3, 1.5, 0.02, 0, 1.5, 0)

	mgMaterial("steel")
	mgStatic(1)
	mgCreateBox(a, 3, 0.05, 0.05, 0, 0, 0)
	mgCreateBox(a, 3, 0.05, 0.05, 0, 3, 0)
	mgCreateBox(a, 0.05, 3, 0.05, -1.5, 1.5, 0)
	mgCreateBox(a, 0.05, 3, 0.05, 1.5, 1.5, 0)
end

