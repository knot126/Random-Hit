function init()

	a = mgCreateBody()
	p0 = mgCreateBody()
	p1 = mgCreateBody()
	p2 = mgCreateBody()
	p3 = mgCreateBody()
	p4 = mgCreateBody()
	p5 = mgCreateBody()
	
	mgMaterial("glass")
	mgColor(0.5, 1, 0.5)
	mgShapeScale(0.2, 1.0, 0.2)

	mgCreateMesh(p0, "pyramid", -3, 1.1, 0)
	mgCreateMesh(p1, "pyramid", -2, .6, 0)
	mgCreateMesh(p2, "pyramid", -1, .1, 0)
	mgCreateMesh(p3, "pyramid", 1, .1, 0)
	mgCreateMesh(p4, "pyramid", 2, .6, 0)
	mgCreateMesh(p5, "pyramid", 3, 1.1, 0)

	mgMaterial("steel")

	mgCreateBox(a, 2.5, .9, 2.5, 3, .4, 0)
	mgCreateBox(a, 2.5, .6, 2.5, 2, .1, 0)
	mgCreateBox(a, 2.5, .3, 2.5, 1, -.2, 0)
	mgCreateBox(a, 2.5, .3, 2.5, -1, -.2, 0)
	mgCreateBox(a, 2.5, .6, 2.5, -2, .1, 0)
	mgCreateBox(a, 2.5, .9, 2.5, -3, .4, 0)
end




