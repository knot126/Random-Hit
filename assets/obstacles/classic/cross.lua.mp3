function init()
	a = mgCreateBody(math.random(-50, 50)*0.01, 0.52, 0, 0, math.random(-100, 100)*0.01, 0)

	mgMaterial("steel")
	mgColor(0.2, 0.2, 0.2)
	mgStatic(1)
	mgCreateBox(a, 0.2, 0.02, 0.2, 0, -0.5, 0)

	mgShapeReset()
	mgMaterial("glass")
	mgColor(0.6, 0.7, 0.8)
	mgCreateBox(a, 0.1, 0.5, 0.1)
	mgCreateBox(a, 0.2, 0.1, 0.1, -0.3, 0, 0)
	mgCreateBox(a, 0.2, 0.1, 0.1, 0.3, 0, 0)
	mgCreateBox(a, 0.1, 0.1, 0.2, 0, 0, -0.3)
	mgCreateBox(a, 0.1, 0.1, 0.2, 0, 0, 0.3)
end

function tick()
end

