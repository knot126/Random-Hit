function init()
	beat = mgGetInt("beat", 7)
	w = mgGetFloat("w", 1)
	cr, cg, cb = mgGetColor("color", 0.5, 1, 0.5)
	
	mgMaterial("steel")	
	mgStatic(2)
	mgMask(127)
	b = mgCreateBody(0, -5, 0)
	mgCreateBox(b, w/2, 0.1, 0.5, 0, -0.1, 0)

	mgMaterial("glass")
	mgColor(cr, cg, cb)
	mgCreateBox(b, w/2-0.05, 1, 0.02, 0, 1, 0)

	mgMove(b, 0, -5, 0)
	done = false
end

function tick()
	--if mgGetBeat(0.55) >= beat and not done then
	m = math.mod(mgGetBeatFloat(0.55), 4.0)
	if mgCameraDistance() < 20.0 and m > beat -0.05 and m < beat+0.05 and not done then
		mgMove(b, 0, 0, 0, 100, 10)
		done = true
	end
	
	if done and not mgIsCleared() then
		x,y = mgGetPos(b)
		if y > -0.1 and mgCanPass() then
			mgClear(500)
		end
	end
end

