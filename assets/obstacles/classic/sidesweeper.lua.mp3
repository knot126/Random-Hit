function init()
	offset = math.random(0, 100)
	width = mgGetFloat("width", 2.0)

	a = mgCreateBody()
	mgMaterial("steel")
	mgColor(0.8, 0.8, 0.8)
	mgStatic(1)
	mgCreateBox(a, 5, 0.02, 0.1, 0, 2.1, 0)

	mgStatic(2)
	sweeper = mgCreateBody(math.sin(mgTime()+offset), 2.05, 0)
	mgCreateBox(sweeper, 0.42, 0.02, 0.05)
	
	mgStatic(0)
	mgMaterial("glass")
	mgForceLimit(0.1)
	mgColor(0.8, 0.5, 0.9)
	mgCreateBox(sweeper, 0.4, 1.0, 0.02, 0, -1, 0)
end

function tick()
	mgMove(sweeper, width*math.sin(mgTime()+offset), 2.05, 0, 1)
end

