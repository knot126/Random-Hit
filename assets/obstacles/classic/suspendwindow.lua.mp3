function init()
	b = mgCreateBody(0, 2, 0)
	mgMaterial("glass")
	mgShapeChamfer(0.02)
	mgCreateBox(b, 1, 1, 0.02)

	r0 = mgCreateRope(b, 0, -1, 1, 0, -2.6, 1, 0, -0.2)
	r1 = mgCreateRope(b, 0, -1, 3, 0, -2.6, 3, 0, -0.2)
	r2 = mgCreateRope(b, 0, 1, 1, 0, 2.6, 1, 0, -0.2)
	r3 = mgCreateRope(b, 0, 1, 3, 0, 2.6, 3, 0, -0.2)
end

function tick()
	b0 = mgGetJointBodies(r0)
	b1 = mgGetJointBodies(r1)
	b2 = mgGetJointBodies(r2)
	b3 = mgGetJointBodies(r3)
	if not mgIsCleared() and not (b0 == b2 or b0 == b3 or b1 == b2 or b1 == b3) then
		mgClear(500)
	end
end

