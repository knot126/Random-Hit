function init()
	s = mgGetFloat("size", 0.5)
	b = mgCreateBody(0, 0, 0)
	mgMaterial("steel")
	mgStatic(1)
	mgShapeScale(s*1.6, s*1.6, s/2)
	mgCreateMesh(b, "extrangel", -s*2.9, 0, 0, 0, 0, 0)
	mgCreateMesh(b, "extrangel", s*2.9, 0, 0, 0, 0, 0)

	mgShapeScale(1, 1, 1)
	mgMaterial("glass")
	mgDensity(.5)
	
	g0 = mgCreateBody(0, 0, 0)
	mgCreateBox(g0, s, s, 0.2, 0, s*3, 0, 0, 0, math.pi/4)

	g1 = mgCreateBody(0, 0, 0)
	mgCreateBox(g1, s, s, 0.2, -s*1.5, s*1.5, 0, 0, 0, math.pi/4)

	g2 = mgCreateBody(0, 0, 0)
	mgCreateBox(g2, s, s, 0.2, s*1.5, s*1.5, 0, 0, 0, math.pi/4)
	
end

function tick()

	if not mgIsCleared() and mgCanPass() then
		mgClear(100)
	end
	
	if mgBodyIsBroken(g0) and mgBodyIsBroken(g1) and mgBodyIsBroken(g2) and not cleared then
		mgScore(500)
		cleared = true
	end
	
end

