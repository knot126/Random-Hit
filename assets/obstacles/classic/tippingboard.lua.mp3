function init()
	b = mgCreateBody(0, 0, 0)
	mgMaterial("glass")
	mgForceLimit(0.01)
	mgCreateBox(b, 0.1, 0.3, 0.2, -1, 0.3, 0)
	mgCreateBox(b, 0.1, 0.3, 0.2, 1, 0.3, 0)

	mgMaterial("steel")

	mgDensity(20)
	mgCreateBox(b, 0.6, 0.1, 0.25, -0.6, 0.65, 0, 0, 0, -0.05)
	mgCreateBox(b, 0.6, 0.1, 0.25, 0.6, 0.65, 0, 0, 0, 0.05)
	
	b = mgCreateBody(0, 1.3, 0)
	mgShapeChamfer(0.06)
	mgCreateCylinder(b, 0.5, 0.2, 0, 0, 0, 0, math.pi/2, 0)
end

function tick()
	if not mgIsCleared() and mgCanPass() then
		mgClear(800)
	end
end

